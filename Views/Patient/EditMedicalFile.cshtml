@model EHRsystem.Models.Entities.MedicalFile

@{
    ViewData["Title"] = "Edit Medical File";
}

<div class="container mt-5">
    <h2>Edit Medical File</h2>

    <form asp-action="EditMedicalFile" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="FileType"></label>
            <input asp-for="FileType" class="form-control" required />
            <span asp-validation-for="FileType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="MedicalRecords" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
